@{
    ViewData["Title"] = "SignUp";
}


<div class="section--container">
    <div class="head--placer">
        <img src="~/images/Frame 12.png" alt="">
        <div class="placer--text">
            <div>
                <img class="logo--img" src="~/images/RYT.png" alt=""><br><span class="logo--text">Reward your Teacher</span>
            </div>
            <!-- <p class="logo-text-2">Reward your Teacher</p> -->
        </div>
    </div>
    <div class="container--section">
        <h2>Create an account</h2>
        <form action="form--panel">
            <div class="input--fields">
                <label for="">User Type</label>
                <select class="select--dropdown" id="cars" name="cars" class="">
                    <option value="volvo">Select</option>
                    <option value="saab">Student</option>
                    <option value="saab">Teacher</option>
                </select>
            </div>
            <div class="input--fields">
                <label for="Name">Name</label>
                <input class="input--area" type="text" placeholder="Type your full name">
                <div class="icon--21">
                    <img src="~/images/Dribbble-Light-Preview.png">
                </div>
            </div>
            <div class="input--fields">
                <label for="Email">Email</label>
                <input class="input--area" type="text" placeholder=" Type your email">
                <div class="icon--21">
                    <img src="~/images/Vector.png">
                </div>
            </div>
            <div class="input--fields">
                <label for="Password">Password</label>
                <input class="input--area" type="text" placeholder="Type your password">
                <div class="icon--21">
                    <img src="~/images/Icon.png">
                </div>
            </div>
            <div class="btn--field">
                <button class="button--21">Sign Up</button>
            </div>
            <div class="line--class">
                <div class="line--1">
                </div>
                Or
                <div class="line--2">
                </div>
            </div>
            <div class="btn--field--2">
                <div class="google-img">
                    <img src="~/images//Google.png" />
                </div>
                <button class="email--signin button--21">Google</button>
            </div>
            <p class="login">Already have an account? <a href="#">Login</a></p>
        </form>
    </div>


</div>
    </div>



</div>