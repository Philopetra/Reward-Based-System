@{
    ViewData["Title"] = "Student Dashboard Transfer";
}

<div style="background-color: #F5F5F5;height:90vh">
    <div style="margin-left:5%;margin-right:10%;width:85%" class="">
        <div class="ryt-xlarge" style="font-weight:bold;margin-top:50px">
            Good morning Franca,
        </div>
        <div style="margin-bottom:25px">
            <span class="ryt-small">Welcome to your Dashboard</span>
            <img style="width:1%" src="~/images/Emoji.png">
        </div>
        <div class="ryt-row">
            <span class="ryt-row ryt-col ryt-round-xlarge ryt-card-4 ryt-padding-large" style="width:47.5%;height:120px">
                <span class="ryt-col" style="width:45%;margin-right:27.5%">
                    <div class="ryt-small ryt-margin-bottom"> Wallet Balance</div>
                    <div class="ryt-xlarge" style="font-weight:bold">N60,000</div>
                </span>
                <span class="ryt-col " style="width:27.5%">
                    <div class="ryt-round-xxlarge ryt-card-4 ryt-padding-small ryt-center ryt-margin-bottom ryt-text-white" style="background-color: #6938EF;">Add Money</div>
                    <div class="ryt-right-align ryt-text-green">Active</div>
                </span>
            </span>


            <span class="ryt-row ryt-col ryt-round-xlarge ryt-card-4 ryt-padding-large" style="height:120px;background-color:#FEFDF0;width:47.5%;margin-left:5%">
                <span class="ryt-col" style="width:45%;margin-right:45%">
                    <div class="ryt-small ryt-margin-bottom"> Total money sent</div>
                    <div class="ryt-xlarge" style="font-weight:bold">N30,000</div>
                </span>
                <span class="ryt-col" style="width:10%;position:asolute">
                    <p class="ryt-round-xxlarge" style="background-color:#FEF7C3;padding:6px"><img style="width: 100%" src="~/images/RYTS-3-send.png"></p>
                </span>
            </span>
        </div>
        <div class="ryt-row" style="background-color:#F5F5F5">
            <div style="font-weight:bold;margin-top:35px" class="ryt-col s12 ryt-margin-bottom">Transaction History</div>
            <div class="ryt-margin-bottom ryt-col s12">
                <span class="ryt-col ryt-center s6 ryt-border-bottom">Funding</span>
                <span class="ryt-col ryt-center s6" style="border-bottom:2.5px solid #6938EF">Transfer</span>
            </div>
            <div style="background-color:#F9FAFB;" class="ryt-padding ryt-col s12">
                <span class="ryt-col ryt-center" style="width:20%;font-weight:bold;">Name of Teacher</span>
                <span class="ryt-col ryt-center" style="width:40%;font-weight:bold;">School</span>
                <span class="ryt-col ryt-center" style="width:20%;font-weight:bold;">Amount Sent</span>
                <span class="ryt-col ryt-center" style="width:20%;font-weight:bold;">Date/time</span>
            </div>
            <div class="ryt-white ryt-col s12" style="height:45vh">
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:20%">Mary Ogunsola</div>
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:40%">Ijegun Comprehensive Senior High School</div>
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:20%">N20,000</div>
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:20%">4/08/2022 - 4:45pm</div>
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:20%">Ikechukwu Obi</div>
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:40%">Ijegun Comprehensive Senior High School</div>
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:20%">N10,000</div>
                <div class="ryt-col ryt-center ryt-padding-large ryt-border-bottom ryt-white ryt-small" style="width:20%">2/06/2022 - 3:00pm</div>
            </div>



        </div>
    </div>
</div>