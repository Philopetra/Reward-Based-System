@{
    ViewData["Title"] = "SignUp-Step2";
}

    <div class="ryts-11-container-main">
        <div class="ryts-11-container py-5">
            <a asp-action="index" asp-controller="home">
        <div class="ryts-11-logo-container"><img src="~/Images/ryts-11-RewardYourTeacherLogo.svg" alt=""></div>
        </a>
            <div class="ryts-11-form">
                <div class="ryts-11-sign-up">
                    <div class="ryts-11-title">
                        <h3>Create an account</h3>
                        <p class="ryts-11-light-p">Step 2 of 2</p>
                    </div>
                    <div class="ryts-11-p">
                        <p>Update your profile information</p>
                    </div>
                    <form action="post">
                        <div class="ryts-11-input-main mb-3">
                            <label for="teaching-year" class="mb-2">Years of Teaching</label><br>
                            <input type="text" class="ryts-11-input select-user-type-single" name="teaching-year" placeholder="e.g 1993 - 2000">
                            
                        </div>
                        <div class="ryts-11-input-main mb-3">
                            <label for="subjects" class="mb-2">Subjects Taught</label><br> 
                            <select class="select-user-type select-user-type-single ryts-11-input " name="UserType" aria-placeholder="Select" > 
                            <option value="default">Select</option>
                            <option value="english">English</option> 
                            <option value="maths">Mathematics</option> 
                            <option value="computer-science">Computer Science</option> 
                            <option value="humanities">Humanities</option> 
                            </select> 
                        </div>

                        <div class="ryts-11-input-main mb-3">
                            <label for="school-type" class="mb-2">School Type</label><br> 
                            <select class="select-user-type select-user-type-single ryts-11-input " name="school-type" aria-placeholder="Select" > 
                            <option value="default">Select</option>
                            <option value="school">Senior High School</option> 
                            <option value="school">Senior Grammar School</option> 
                            <option value="school">Junior High School</option>
                            <option value="school">Secondary School</option>
                            </select> 
                            
                        </div>

                        <div class="ryts-11-input-main mb-3">
                            <label for="upload-picture" class="mb-2">Upload NIN</label><br>
                            <input type="text" class="ryts-11-input" name="upload-picture" placeholder="Upload picture">
                            <div class="ryts-11-icon">
                                <img src="~/Images/ryts-11-image-square.svg" alt="">
                            </div>
                        </div>

                        <div class="ryts-11-input-main mb-3">
                            <label for="list-school" class="mb-2">Schools where you taught</label><br>
                            
                            <select class="select-user-type  ryts-11-input " name="list-school" aria-placeholder="Select">
                             <option value="school">Type name of school</option>
                            <option value="school">Mainland Senior High School</option>
                            <option value="school">Wesley Girls Junior Secondary School</option>
                            <option value="school">Ebute- Metta High School</option>
                            <option value="school">Marywood Senior Grammar School</option>
                            <option value="school">Akoka Junior High School</option>
                            <option value="school">Herbert Macaulay Junior Secondary School </option>
                            </select>
                            <div class="ryts-11-icon">
                                <img src="~/Images/ryts-11-school.svg" alt="">
                            </div>
                        </div>


                        <button class="ryts-11-form-btn" type="submit">Sign Up</button>
                    </form>

                    <div class="ryts-11-line"></div>

                    <a href="#" class="ryts-11-google-main-a">
                    <div class="ryts-11-google-main">
                        <i><img src="~/Images/ryts-11-google.png"  alt=""></i>
                        <span>Google</span>
                    </div>
                    </a>
                </div>
                <div class="ryts-11-login py-4 mt-3">
                    <span>Already have an account? </span>
                    <span class="ps-2 "><a asp-action="Login">Login</a></span>
                </div>
            </div>
        </div>
    </div>